{{! template-lint-disable no-action }}
<PowerSelect
  @triggerClass={{if (eq @journalClass "is-invalid") (local-class "is-invalid") (local-class "is-valid")}}
  @search={{this.searchJournals}}
  @searchEnabled={{true}}
  @selected={{@value}}
  @placeholder="Journal"
  data-test-find-journal-select
  @onChange={{this.onSelect}}
  as |journal|
>
  {{journal.journalName}}
</PowerSelect>