{{! template-lint-disable no-inline-styles require-presentational-children prettier }}
  <nav
    id="header-navbar"
    class="navbar navbar-light navbar-expand-md w-100"
    {{did-insert this.scrollToAnchor}}
    {{did-update this.scrollToAnchor}}
  >
    <div class={{if @fullWidth 'container-fluid' 'container'}}>
      <div class="col-xs-12" style="width:100%;">
        <button class="navbar-toggler text-center border-none" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav" style="width:100%">
            <li class="nav-item"><LinkTo @route="dashboard" class="nav-link pl-0 ml-0">Dashboard</LinkTo></li>
            {{#if this.hasAUser}}
              <li class="nav-item"><LinkTo @route="grants" class="nav-link" data-test-navbar-grants-link>Grants</LinkTo></li>
              <li class="nav-item"><LinkTo @route="submissions" class="nav-link" data-test-navbar-submissions-link>Submissions</LinkTo></li>
            {{/if}}
            {{#if this.aboutUrl}}
              <li class="nav-item">
                <a class="nav-link" href="{{this.aboutUrl}}">About</a>
              </li>
            {{/if}}
            {{#if this.contactUrl}}
              <li class="nav-item">
                <a class="nav-link" href="{{this.contactUrl}}">Contact</a>
              </li>
            {{/if}}
            {{#if this.faqUrl}}
              <li class="nav-item">
                <a class="nav-link" href="{{this.faqUrl}}">FAQ</a>
              </li>
            {{/if}}
            <li class="nav-item dropdown ml-auto">
              <a id="user-menu-name" class="nav-link accountInfo pr-1" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="pr-1">
                  <GravatarImage
                    @email={{this.currentUser.user.email}}
                    @title={{this.currentUser.user.email}}
                    @alt={{this.currentUser.user.email}}
                    @defaultImage="identicon"
                    @class="img-avatar"
                    @size={{30}}
                    @retina={{true}}
                  />
                </span>
                {{this.currentUser.user.displayName}}
              </a>
              <div id="user-menu" class="dropdown-menu dropdown-menu-right">
                <div id="user-menu-title" class="dropdown-header text-center">
                  <strong>Account</strong>
                </div>
                <div class="divider"></div>
                <a class="dropdown-item" href="/logout"><i class="fa fa-lock"></i>Logout</a>
              </div>
            </li>
          </ul>
        </div>
    </div>
  </div>
</nav>
