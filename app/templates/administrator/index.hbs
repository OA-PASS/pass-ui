<div class="row mt-3 mb-3">
    <div class="col-6">
        <h1 class="font-weight-light pt-1">Administrator</h1>
    </div>
</div>
<p>
    This list contains all Submissions uploaded in pass. Please see our 
    <a href="{{this.assetsUri}}faq.html#nih-submissions"> FAQ page</a>
</p>
<div class="row">
    <div class="col-12" style="overflow-x: auto;">
        <div class="submission-table" data-test-submissions-index-submissions-table>
            <ModelsTable
                @data={{this.model.submissions}}
                @columns={{this.columns}}
                @themeInstance={{this.themeInstance}}
                @showColumnsDropdown={{false}}
                @useFilteringByColumns={{true}}
                @filteringIgnoreCase={{true}}
                @multipleColumnsSorting={{false}}
                @authorSelected="authorclick"
                @pageSize={{this.tablePageSize}}
                @pageSizeValues={{this.tablePageSizeValues}}
                @displayDataChangedAction={{this.myAction}}
            />   
        </div>
    </div>
</div>
<MessageDialog
  @show={{this.messageShow}}
  @to={{this.messageTo}}
  @subject={{this.messageSubject}}
  @message={{this.messageText}}
>
</MessageDialog>