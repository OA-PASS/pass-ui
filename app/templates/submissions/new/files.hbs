<WorkflowWrapper
  @submission={{this.submission}}
  @title={{this.publication.title}}
  @isProxySubmission={{this.submission.isProxySubmission}}
  @submissionEvents={{this.submissionEvents}}
  @loadTab={{this.validateAndLoadTab}}
  @updateCovidSubmission={{this.updateCovidSubmission}}
>
  <WorkflowFiles
    @submission={{this.submission}}
    @previouslyUploadedFiles={{this.files}}
    @newFiles={{this.newFiles}}
    @next={{action "loadNext"}}
    @back={{action "loadPrevious"}}
    @abort={{action "abort"}}
  />
</WorkflowWrapper>